{
  "name": "ecos-backend",
  "version": "1.0.0",
  "description": "Opinionated framework to quickly create a GraphQL backend for Ecos applications",
  "main": "dist/index.js",
  "engines": {
    "node": ">14"
  },
  "scripts": {
    "build": "npm-run-all clean tsc copy-assets",
    "tsc": "tsc",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copy-assets",
    "dev:start": "npm-run-all build start",
    "nodemon": "JWT_SECRET_OR_KEY=abc JWT_REFRESH_TOKEN_SECRET_OR_KEY=def npx nodemon src/app/server.ts",
    "start": "JWT_SECRET_OR_KEY=abc JWT_REFRESH_TOKEN_SECRET_OR_KEY=def node dist/app/server.js",
    "seed": "ts-node src/seeds/seed-data.ts",
    "seed:activity": "ts-node src/seeds/seed-activity.ts",
    "seed:apple-user": "ts-node src/seeds/seed-apple-user.ts",
    "unseed": "ts-node src/seeds/clear-seed.ts",
    "reseed": "npm-run-all unseed seed",
    "import": "ts-node src/seeds/import-data.ts",
    "test": "npm run-script test",
    "build-test-app": "npm-run-all clean-test-app tsc-test-app",
    "tsc-test-app": "tsc -p test",
    "clean-test-app": "rimraf test/dist/*",
    "start-test-app": "node test/dist/test/app/server.js"
  },
  "author": "Ben Girardet",
  "license": "UNLICENCED",
  "dependencies": {
    "@typegoose/auto-increment": "^0.6.0",
    "@typegoose/typegoose": "^7.4.8",
    "@types/express-jwt": "0.0.42",
    "@types/mongoose": "^5.10.3",
    "@types/multer": "^1.4.4",
    "@types/sjcl": "^1.0.29",
    "apollo-server-express": "^2.18.2",
    "awesome-phonenumber": "^2.43.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "gun": "^0.2020.520",
    "helmet": "^4.1.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "5.10.18",
    "multer": "^1.4.2",
    "nan": "^2.14.1",
    "nanoid": "^3.1.12",
    "node-pushnotifications": "^1.6.0",
    "redis": "^3.0.2",
    "request-context": "^2.0.0",
    "sjcl": "^1.0.8",
    "smsapicom": "^1.5.1",
    "socket.io": "^2.3.0",
    "type-graphql": "^1.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.11.1",
    "@types/node-pushnotifications": "^1.0.3",
    "@types/shelljs": "^0.8.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
