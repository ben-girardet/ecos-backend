{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": [
            "./app"
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
    },
    "include": [
        "app/**/*"
    ]
}
